{
  "name": "calibrator",
  "version": "0.1.0",
  "description": "Cross-chain token swap parameter calculation service using The Compact protocol",
  "author": "0age",
  "private": true,
  "main": "dist/index.js",
  "type": "module",
  "packageManager": "pnpm@8.11.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "scripts": {
    "dev:frontend": "cd frontend && pnpm dev",
    "dev:server": "tsx watch src/index.ts",
    "dev": "concurrently --kill-others-on-fail \"pnpm dev:frontend\" \"pnpm dev:server\"",
    "build:frontend": "cd frontend && pnpm build",
    "build:server": "tsc",
    "build": "pnpm build:server && pnpm build:frontend",
    "start": "node dist/index.js",
    "stop": "pkill -f \"node.*calibrator|vite\"",
    "lint": "pnpm --parallel run lint",
    "lint:fix": "pnpm --parallel run lint:fix",
    "format": "pnpm --parallel run format",
    "format:check": "pnpm --parallel run format:check",
    "type-check": "tsc --noEmit",
    "test": "jest src",
    "test:frontend": "cd frontend && pnpm test",
    "test:all": "pnpm test && pnpm test:frontend",
    "prepare": "husky install"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.1",
    "@fastify/static": "^6.12.0",
    "@types/dotenv": "^8.2.3",
    "dotenv": "^16.4.7",
    "fastify": "^4.24.3",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
