{
  "name": "calibrator",
  "version": "0.1.0",
  "description": "Cross-chain token swap parameter calculation service using The Compact protocol",
  "author": "0age",
  "main": "dist/index.js",
  "type": "module",
  "packageManager": "pnpm@8.11.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "scripts": {
    "build": "tsc && cd frontend && pnpm build",
    "start": "node dist/index.js",
    "dev": "concurrently \"tsx watch src/index.ts\" \"cd frontend && pnpm dev\"",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "prepare": "pnpm run build"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.1",
    "@fastify/static": "^6.12.0",
    "fastify": "^4.24.3",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.2"
  }
}
